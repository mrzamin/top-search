extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of resource' name='name' required value=(undefined===resource ? '' : resource.name) )
    div.form-group
      label(for='author') Author:
      select#author.form-control(name='author' required )
        option(value='') --Please select an author--
        for author in authors
          if resource
            if author._id.toString()===resource.owner._id.toString()
              option(value=author._id selected) #{author.owner}
            else
              option(value=author._id) #{author.owner}
          else
            option(value=author._id) #{author.owner}
    div.form-group
      label(for='course') Subject:
      select#subject.form-control(name='subject' required)
        option(value='') --Please select a subject--
        for subject in subjects
          if resource
            if subject._id.toString()===resource.subject._id.toString()
              option(value=subject._id selected) #{subject.name}
            else
              option(value=subject._id) #{subject.name}
          else
            option(value=subject._id) #{subject.name}
    div.form-group
      label Type:
      div
        for type in types
          div(style='display: inline; padding-right:10px;')
            if type.checked
              input.checkbox-input(type='radio', name='type', id=type._id, value=type._id, checked)
            else
              input.checkbox-input(type='radio', name='type', id=type._id, value=type._id, )
            label(for=type._id) &nbsp;#{type.type}
    div.form-group
      label(for='link') Name:
      input#link.form-control(type='text', placeholder='Link of resource' required name='link' value=(undefined===resource ? '' : resource.href) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
