extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='owner') Author:
      input#owner.form-control(type='text', placeholder='Beethoven, Michaelangelo, etc.' name='owner' required value=(undefined===owner ? '' : owner.owner) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
    
  a(href="/database/authors") Back to authors list