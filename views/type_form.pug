extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='type') Type:
      input#type.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='type' required value=(undefined===type ? '' : type.type) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
